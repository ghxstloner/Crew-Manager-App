{
  "expo": {
    "name": "CrewManager",
    "slug": "CrewManager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#001689"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.crewmanager.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#001689"
      },
      "package": "com.crewmanager.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CrewManager to access your camera",
          "microphonePermission": "Allow CrewManager to access your microphone",
          "recordAudioAndroid": false
        }
      ]
    ],
    "scheme": "crewmanager"
  }
}